<% cache(['article',article]) do %>
<div class="topic media">
  <div class="media-left">
    <%= user_avatar_tag(article.user, :avatar) %>
  </div>
  <div class="infos media-body">
    <div class="title media-heading">
      <%= link_to article.title, article_path(article) %>
    </div>
    <div class="info">
      <%= render_node_name(article.node.name, article.node.id) %>
      <span class="hidden-mobile">
        •
        <%= user_name_tag(article.user) %>
        •
        <%= time_ago_now(article.created_at) %>
      </span>
    </div>
  </div>
  <div class="count media-right">
    <%= link_to(article.comment_count, class: 'state-false') %>
  </div>
</div>
<% end %>