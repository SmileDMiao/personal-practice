<div class="row node-list">
  <% Section.includes(:nodes).all.each do |section| %>
    <div class="node media">
      <label class="media-left"><%= section.name %></label>
            <span class="nodes media-body">
              <% section.nodes.each do |node| %>
                <span class="name"><%= link_to(node.name, '#', title: node.name, data: {id: node.id}) %></span>
              <% end %>
            </span>
    </div>
  <% end %>
</div>