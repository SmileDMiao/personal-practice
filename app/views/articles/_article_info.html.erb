<div class="panel-heading media clearfix">
  <div class="media-body">
    <h3 class="media-heading"><%= @article.title %></h3>

    <div class="info">
      <div class="info small">
        <%= render_node_name(@article.node.name, @article.node.id) %>
        •
        <%= user_name_tag(@article.user) %>
        •
        <%= time_ago_now(@article.created_at) %>
      </div>
    </div>
  </div>
  <div class="media-right">
    <%= user_avatar_tag(@article.user, :avatar) %>
  </div>
</div>
