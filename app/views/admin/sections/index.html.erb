<section class="content-header">
  <h1>
    Sections
  </h1>
</section>

<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">

          <h3 class="box-title">
            <%= link_to t('helpers.submit.create'), new_admin_section_path%>
          </h3>

          <div class="box-tools">
            <%= form_tag admin_sections_path, :remote => true, :method => 'get'  do %>
                <div class="input-group input-group-sm" style="width: 150px;">
                  <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

                  <div class="input-group-btn">
                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                  </div>
                </div>
            <% end %>
          </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body table-responsive no-padding">
          <table class="table table-hover">
            <tr>
              <th>名称</th>
              <th>排序</th>
              <th>创建时间</th>
              <th>操作</th>
            </tr>
            <tbody id="foods">
            <% @sections.each do |section| %>
                <tr>
                  <td><%= section.name %></td>
                  <td><%= section.sort %></td>
                  <td><%= section.created_at %></td>
                  <td>
                    <%= link_to t('helpers.submit.edit'), edit_admin_section_path(section), :class => 'btn btn-sm btn-warning' %>
                    <%= link_to t('helpers.submit.destroy'), admin_section_path(section), 'data-confirm' => 'Are you sure?',:method => 'delete', :class => 'btn btn-sm btn-danger' %>
                  </td>
                </tr>
            <% end %>
            </table>
          </table>
        </div>

        <div class="box-footer clearfix" id="paginator">
          <%= paginate @sections,:remote=>true,:theme => 'bootstrap3' %>
        </div>

      </div>

    </div>
  </div>
</section>