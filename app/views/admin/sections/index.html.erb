<section class="content-header">
  <h1>
    Sections
  </h1>
</section>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">
            <%= link_to t('helpers.submit.create'), new_admin_section_path%>
          </h3>
        </div>
        <div class="box-body table-responsive no-padding">
          <table class="table table-hover">
            <tr>
              <th>名称</th>
              <th>排序</th>
              <th>创建时间</th>
              <th>操作</th>
            </tr>
            <tbody>
            <% @sections.each do |section| %>
                <tr>
                  <td><%= section.name %></td>
                  <td><%= section.sort %></td>
                  <td><%= section.created_at.to_date %></td>
                  <td>
                    <%= link_to t('helpers.submit.edit'), edit_admin_section_path(section), :class => 'btn btn-sm btn-warning' %>
                    <%= link_to t('helpers.submit.destroy'), admin_section_path(section), 'data-confirm' => 'Are you sure?',:method => 'delete', :class => 'btn btn-sm btn-danger' %>
                  </td>
                </tr>
            <% end %>
            </table>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>