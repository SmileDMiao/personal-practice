<% user = User.find_by_id(item.searchable_id) %>
<div class="result user media">
  <div class="media">
    <div class="avatar media-left">
      <div class='image'><%= user_avatar_tag(user, :avatar) %></div>
    </div>
    <div class="media-body">
      <div class="info">
        <%= link_to user.full_name, user %>
      </div>
      <div class="info number">
        <span title="注册日期"><%= user.created_at.to_date %></span>
        <% if user.city.present? %> • <span title="所在地"><%= user.city %></span><% end %>
        •
        <span><%= user.article_count %></span> 篇帖子 • <span><%= user.comment_count %></span> 条回帖
      </div>
    </div>
  </div>
</div>
