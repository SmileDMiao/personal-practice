<%
   article = Article.find_by_id(item.searchable_id)
%>
<div class="result">
  <div class="title"><%= link_to highlight(article.title), article %></div>
  <div class="info">
    <span class="url"><%= link_to polymorphic_url(article), article %></span>
    <span class="date" title="Last Updated At"><%= article.updated_at.to_date %></span>
  </div>
  <div class="desc"><%= raw item.pg_search_highlight %></div>
</div>
