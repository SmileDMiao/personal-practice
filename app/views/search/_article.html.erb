<%
  title = hit.highlight.title.try(:first) || item.title
%>
<div class="result">
  <div class="title"><%= link_to highlight_url(title), item %></div>
  <div class="info">
    <span class="url"><%= link_to polymorphic_url(item), item %></span>
    <span class="date" title="Last Updated At"><%= item.updated_at.to_date %></span>
  </div>
  <div class="desc"><%= raw hit.highlight.body.try(:first) %></div>
</div>