<section class="content">
  <div class="row">
    <%= render "sidebar", user: @user %>
    <div class="col-md-8">
      <%= render "menu" %>
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="row">
            <% @users.each do |user| %>
              <div class="col-xs-6 col-sm-6 col-md-4">
                <div class="media user-card">
                  <div class="media-left"><%= image_tag user.avatar.url, :class => 'avatar' %></div>
                  <div class="media-body">
                    <div class="media-heading"><%= user_name_tag(user) %></div>
                    <div class="infos">
                      <div class="item opts"><%= follow_user_tag(user, class: "") %></div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <div class="panel-footer clearfix">
        </div>
      </div>
    </div>
  </div>
</section>

<script>

  $('.button-follow-user').click(function () {
    btn = $(this);
    full_name = btn.data("id");
    span = btn.find("span");
    followerCounter = $(".follow-info .followers .counter");

    if (btn.hasClass("active")) {
      $.ajax({
        url: "<%= unfollow_user_path %>",
        type: "POST",
        success: function (res) {
          if (res.code === 0) {
            btn.removeClass('active');
            span.text("关注");
            return followerCounter.text(res.data.followers_count);
          }
        }
      });
    } else {
      $.ajax({
        url: "<%= follow_user_path %>",
        type: 'POST',
        success: function (res) {
          if (res.code === 0) {
            btn.addClass('active');
            span.text("取消关注");
            return followerCounter.text(res.data.followers_count);
          }
        }
      });
    }
    return false;
  })

</script>
