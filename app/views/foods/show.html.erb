<section class="content-header">
  <h1>
    CRUD DEMO
    <small>Preview</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
    <li><a href="#">Index</a></li>
    <li class="active">CRUD Demo</li>
  </ol>
</section>

<section class="content">

  <div class="box box-default">
    <div class="box-header with-border">
      <h3 class="box-title">查看</h3>

      <div class="box-tools pull-right">
        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
        <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
      </div>
    </div>

    <div class="box-body">

      <div class="row">
        <div class="col-xs-12">
          <h2 class="page-header">
            <%= @food.name %>
            <small class="pull-right"><%= @food.created_at %></small>
          </h2>
        </div>
      </div>

      <form class="form-horizontal">
        <div class="form-group">
          <label class="col-sm-2 control-label">category</label>
          <div class="col-sm-4">
            <p class="form-control-static"><%= @food.category %></p>
          </div>
          <label class="col-sm-2 control-label">color</label>
          <div class="col-sm-4">
            <p class="form-control-static"><%= @food.color %></p>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label">odor</label>
          <div class="col-sm-4">
            <p class="form-control-static"><%= @food.odor %></p>
          </div>
          <label class="col-sm-2 control-label">number</label>
          <div class="col-sm-4">
            <p class="form-control-static"><%= @food.number %></p>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label">country</label>
          <div class="col-sm-4">
            <p class="form-control-static"><%= @food.country %></p>
          </div>
          <label class="col-sm-2 control-label">price</label>
          <div class="col-sm-4">
            <p class="form-control-static"><%= @food.price %></p>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label">rate_flag</label>
          <div class="col-sm-4">
            <p class="form-control-static"><%= @food.rate_flag %></p>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label">description</label>
          <div class="col-sm-10">
            <p></p>
            <%= raw @food.description %>
          </div>
        </div>
      </form>

    </div>

  </div>


</section>