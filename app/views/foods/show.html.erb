<section class="content-header">
  <h1>
    CRUD DEMO
    <small>Preview</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
    <li><a href="#">Index</a></li>
    <li class="active">CRUD Demo</li>
  </ol>
</section>

<section class="content">

  <div class="box box-default">
    <div class="box-header with-border">
      <h3 class="box-title"><%= t 'helpers.submit.show' %></h3>

      <div class="box-tools pull-right">
        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
        <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
      </div>
    </div>

    <div class="box-body">

      <div class="row">
        <div class="col-xs-12">
          <h2 class="page-header" style="color: <%= @food.color %>">
            <%= @food.name %>
            <small class="pull-right"><%= @food.created_at %></small>
          </h2>
        </div>
      </div>

      <table class="table table-hover">
        <tr>
          <td><%= t 'foods.name' %></td>
          <td><%= @food.name %></td>
          <td><%= t 'foods.category' %></td>
          <td><%= @food.category %></td>
        </tr>
        <tr>
          <td><%= t 'foods.color' %></td>
          <td><span class="label" style="background-color: <%= @food.color %>"><%= @food.color %></span></td>
          <td><%= t 'foods.country' %></td>
          <td><%= @food.country %></td>
        </tr>
        <tr>
          <td><%= t 'foods.number' %></td>
          <td><%= @food.number %></td>
          <td><%= t 'foods.price' %></td>
          <td><%= @food.price %></td>
        </tr>
        <tr>
          <td><%= t 'foods.description' %></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
        <tr>
          <td colspan="5"><%= raw @food.description %></td>
        </tr>
        </table>

    </div>

  </div>

</section>