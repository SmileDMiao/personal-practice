<section class="content">
  <div class="notifications panel">
    <div class="panel-heading hide-ios clearfix">
      所有通知
    <span class="pull-right">
      <%= link_to '清空', notifications_clean_path, class: 'btn btn-sm btn-danger', id: 'btn-remove-all', method: 'delete'  %>
    </span>
    </div>
    <div class="panel-body list item-list">
      <% if @notifications.blank? %>
        <div class="notification-group">
          <div class="no-records">没有通知</div>
        </div>
      <% else %>
        <% @notification_groups.each do |group, notifications| %>
          <div class="notification-group">
            <div class="group-title"><i class="fa fa-clock-o"></i> <%= group %></div>
            <%= render notifications %>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="panel-footer hide-ios">
      <%= paginate @notifications, :theme => 'bootstrap3' %>
    </div>
  </div>
</section>