<div class="edit-reply panel panel-default">
  <div class="panel-heading">
    修改回帖 <span class="pull-right"><%= article_title_tag(@article) %></span>
  </div>
  <div class="panel-body">
    <%= form_for([@article, @comment]) do |f| %>
      <%= render 'shared/error_messages', target: @comment %>
      <div class="form-group">
        <%= f.text_area :body, class: 'article-editor form-control', rows: '4', tabindex: '1' %>
      </div>
      <div class="form-group">
        <%= f.submit '保存', class: 'btn btn-primary col-xs-2', 'data-disable-with' => '保存中' %>
        <%= link_to '删除', [@article, @comment], class: 'pull-right btn btn-danger', method: :delete, data: {confirm: '确定要删除此回复么？'} %>
      </div>
    <% end %>
  </div>
</div>